/* pages/home/home.wxss */
page{
  background-color: #f5f5f5;
}

.swiper-back{
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: #E9AD60;
  height: 400rpx;
  width: 100%;
  align-items: center;
}

.swiper-text{
  display: flex;
  height: 100rpx;
  color:white;
  align-items: center;
  font-size: 50rpx;
}
.swiper-top{
  position: absolute;
  width:600rpx;
  bottom: 0%;
}
.swiper-top image{
  width:600rpx;
}

.icon-back{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  /* justify-content: space-around; */
  background-color: white;
  width: 95%;
  height: 150rpx;
  margin: 20rpx;
}

.icon-four{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-four image{
  width: 80rpx;
}


.article{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-color: #87CECD;
  width: 70%;
  height: 400rpx;
  margin: 60rpx 20rpx 60rpx 20rpx;
  padding: 0 20rpx 40rpx 20rpx;
}
.remain{
  display: flex;
  flex-direction: row;
}
.title{
  font-size: 36rpx;
  padding: 10rpx 0 0 30rpx;
}
.remain_img{
  width:300rpx;
}
.article image{
  width: 260rpx;
  padding: 20rpx;
}
.content{
  font-size:25rpx;
  margin: 0 20rpx;
}

.ca{
  background-color:#A2B5BE;
}
.cb{
  background-color:#E9AD60;
}
.cc{
  background-color:#528DA4;
}
.cd{
  background-color:#D1E1D7;
}

.move-box{
  position: relative;
  display: flex;
  align-items: center;
  width: 80%;
  height: 40px;
  top: 15rpx;
  margin: 30rpx;
  border-radius: 1.7em;
  background-color: white;
  /* background: linear-gradient(90deg,#4673ae,#d2ebfd); */
  overflow: hidden;
  white-space: nowrap;
}

.move-inner{
  position: absolute;
  line-height: 40px;
  animation: moveTxt 5s linear infinite;
}

@keyframes moveTxt {
  0%{
      left: var(--oWidth--);
  }

  100%{
      left: var(--sWidth--);
  }
}