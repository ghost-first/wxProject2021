/* pages/game/game.wxss */
.movaArea{
  width: 100%;
  height: 800rpx;
  margin: 80rpx 0;
  /* background-color: lightcoral; */
}
.movaArea movable-view{
  width:200rpx;
  height: 50rpx;
  z-index: 10;
}
.movaArea image{
  width:200rpx;
}
.leftTop{
  position: absolute;
}

.rightTop{
  position: absolute;
  left:100%;
}

.leftBottom{
  position: absolute;
  top:90%;
}

.rightBottom{
  position: absolute;
  left:100%;
  top:90%;
}

.correctImg{
  position: relative;
  width:200rpx;
  top:300rpx;
  left:275rpx;
}

.tip{
  margin: 50rpx 0;
}
.button{
  width: 80%;
}

.finishImg{
  width: 90%;
}

.finishText{
  font-size: 30rpx;
  margin-top:120rpx;
}